<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2A322E"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/white_leaf_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/leaf" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="H A N D  M A D E  T E A  S E T"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="cursive"
        android:text="Organic Tea House"
        android:textAlignment="center"
        android:textColor="#F19F27"
        android:textSize="80sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/leaf_image"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/tea_leaf"
        android:layout_weight="1"/>
        <ImageView
            android:id="@+id/pot_image"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/tea_kettle_1"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>